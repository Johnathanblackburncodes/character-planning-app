<%- include('../partials/header') %>

<% if (user) { %>
<section class="content">
  <div class="container">
    <% if (user.characters) { %>
    <% user.characters.forEach(function(character) { %>
    <ul>
      <li>
        <h3><%= character.name %></h3>
      </li>
      <li><%= character.race %></li>
      <li><%= character.archetype %></li>
      <li><%= character.gender %></li>
      <li><a href="/characters/<%= character._id %>">DETAILS</a></li>
      <form class="delete-form" action="/characters/<%= character._id %>?_method=DELETE" method="POST">
        <button type="submit">ðŸ—‘</button>
      </form>
    </ul>
    </span>
    <% }) %>
    <% } else { %>
    <h5>No Characters yet</h5>
    <% } %>
    <div class="btn">
      <a href="/characters/new">Add a new Character</a>
    </div>
  </div>
</section>
<% } else { %>
